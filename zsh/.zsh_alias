# github.com/hbd

# common.
alias grep="grep --color=auto -n"
alias rm="rm -v"
alias a64="encode64"
alias d64="decode64"
alias bc="bc -l $HOME/.bcrc"

# user.
alias l='ls -al'
alias ll='ls -l'
alias pbc="pbcopy"
# get size of top-level dirs.
# KB.
alias ducks='du -cks * | sort -rn | head'
# MB.
alias ducms='du -cms * | sort -rn | head'
# grep for go.
alias fggrep=fgrep -R --color --include='*.go'

# emacs.
# attach to server using emacsclient.
alias emacs="emacsclient -a '' -ct"

# kubernetes
alias kub=kubectl

# jq.
alias jqj="jq -R 'fromjson? | select(type == "\"object\"")'"

# Default editors.
# Note: Way to alias wildcard extension?
alias -s {go,mod,sum,tf}=emacs
