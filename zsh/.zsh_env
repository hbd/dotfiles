# global.
export DOTFILES="$HOME/.dotfiles"

# common.
# set host metadata.
[ -z "$LANG" ]     && export LANG=en_US.UTF-8
[ -z "$HOSTTYPE" ] && export HOSTTYPE=$(uname -s)
[ -z "$HOST" ]     && export HOST=$(uname -n)
[ -z "$SHELL" ]    && export SHELL=$(which zsh)

# set GPGKEY if exists.
[ -f $HOME/.gpgkey ] && export GPGKEY=$(cat $HOME/.gpgkey)

# mac-specific.
if [ "$HOSTTYPE" = "Darwin" ]; then
    export MANPATH="/usr/local/man:$MANPATH"
    export LSCOLORS="ExFxCxDxBxegedabagacad"
fi

# "most" as pager is more than "less" and "more".
export PAGER="most"
# set editor to emacs.
export EDITOR="emacs"

# go.
export GO111MODULE=on

# remove '/', '=', '.' frmm WORDCHARS default to backspace up to '/'.
export WORDCHARS='*?_-[]~&;!#$%^(){}<>'

# path.
# Pip binary path.
PIP_PATH=$(python -m site --user-base)/bin

# - Go
# - Pip
# - Rust
export PATH=$PATH:$GOPATH/bin:$GOROOT/bin:$PIP_PATH:$HOME/.cargo/bin
